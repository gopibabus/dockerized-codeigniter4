{
  "extends": ["@commitlint/config-conventional"],
  "formatter": "@commitlint/format",
  "rules": {
    "header-max-length": [0, "always", 72],
    "type-enum": [2, "always", ["feature", "fix", "docs", "refactor", "tests", "hotfix"]],
    "type-case": [2, "always", "lower-case"],
    "scope-case": [2, "always", ["upper-case", "kebab-case", "pascal-case", "snake-case"]],
    "subject-case": [1, "always", ["lower-case","camel-case", "kebab-case", "pascal-case", "snake-case", "sentence-case", "start-case"]]
  },
  "helpUrl": "Your Git message should look like: git commit -m \"feature(SPTANALYTI-007): ticket name\""
}